{
  "name": "happy-heart-extension",
  "version": "1.0.0",
  "description": "A customizable new tab experience with productivity features",
  "main": "newtab/script.js",
  "scripts": {
    "build": "node scripts/simple-build.js",
    "package": "node scripts/package-extension.js",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "dev": "npm run build && npm run test",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "npm run test && npm run lint",
    "precommit": "npm run validate",
    "postinstall": "echo 'Dependencies installed successfully'"
  },
  "devDependencies": {
    "rimraf": "^5.0.5",
    "jest": "^29.7.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0"
  },
  "keywords": [
    "chrome-extension",
    "new-tab",
    "productivity",
    "customizable",
    "theme"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/happy-heart-extension.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/happy-heart-extension/issues"
  },
  "homepage": "https://github.com/yourusername/happy-heart-extension#readme"
}
